    <script>
        function removeProduct(orderId, productId, price, quantity) {
            const data = {
                orderId: orderId,
                productId: productId,
                price: price,
                quantity: quantity
            };

            fetch('/api/deleteCart', {
                method: 'Delete',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
                .then(response => response.json())
                .then(result => {
                    console.log(result);
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        }
    </script>

